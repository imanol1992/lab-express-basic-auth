<a href="/signup">signUp se actualiza</a>


<form action="/auth/signup" method="POST">
    <div class="form-group">
        <label for="field1">Username</label>
        <input type="text" class="form-control" id="field1" name="username">
    </div>
    <div class="form-group">
        <label for="field2">Password</label>
        <input type="password" class="form-control" id="field2" name="password">
    </div>

    <button type="submit" class="btn btn-dark">Registrarme</button>

    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}
</form>